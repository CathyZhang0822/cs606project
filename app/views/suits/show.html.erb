
<h2 align="center">Suit:<%= @suit.appid %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <% if@suit.user %>
    <ul class = "listing">
        <div class="row center">
            <div class="col-md-4 col-md-offset-4">
                <li>Rentered by:</li>
                <li class="article-title">
                    <%= link_to @suit.user.username, user_path(@suit.user) %>
                </li>
            </div>
        </div>
    </ul>
    <% end %>
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format (@suit.description) %>
    <div class = "article-actions">
        <%= link_to "Edit this suit", edit_suit_path(@suit),
                                      class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this suit", suit_path(@suit), method: :delete,
                                        data: {confirm: "Are you sure?"},
                                        class: "btn btn-xs btn-danger" %>
        <%= link_to "View all suits", suits_path, class: "btn btn-xs btn-success"%>
    </div>
</div>