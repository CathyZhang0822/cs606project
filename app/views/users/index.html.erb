<h1>All Users</h1>
<p>
    <%= link_to "Back to the Closet", suits_path %>
</p>

<%= search_form_for @search_user do |f| %>
    <%= f.label :username_cont %>
    <%= f.search_field :username_cont %><br>
    <%= f.label :UIN %>
    <%= f.search_field :UIN_cont %><br>
    <%= f.label :email %>
    <%= f.search_field :email_cont %><br>
    <%= f.label :phone %>
    <%= f.search_field :phone_cont %><br>
   <%= f.submit "Search" %>
<% end %>
<div align="center"><%= will_paginate %></div>

<%= content_tag :table, class: 'table' do %>
   <%= content_tag :thead, display_user_sorted_column_headers(@search_user), nil, false %>
   <%= content_tag :tbody, display_user_sorted_search_results(@users), nil, false %>
<% end %>
<div align="center"><%= will_paginate %></div>